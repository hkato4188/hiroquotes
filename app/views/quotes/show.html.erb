
<div class="card">
  <div class="card-header">
   <strong><%= @quote.author %></strong>
  </div>

  <div class="card-body">
    <h5 class="card-title">
      <%= @quote.text %>
    </h5>
    <p class="card-text">
        <i><%= @quote.genre %></i>
    </p>
    <div class="d-grid gap-2 d-sm-flex">          
          <%= button_to "Delete", @quote, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-sm btn-secondary" %>
          <%= link_to 'Edit', edit_quote_path(@quote), class:"btn btn-sm btn-outline-secondary" %>
          <%= link_to 'Back', quotes_path, class:"btn btn-sm btn-secondary" %>
    </div>
  </div>
</div>