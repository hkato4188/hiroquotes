<figure class="text-end">
  <blockquote class="blockquote">
    <p>I do not want art for a few, any more than education for a few, or freedom for a few.</p>
  </blockquote>
  <figcaption class="blockquote-footer">
    <cite><i>William Morris</i></cite>
  </figcaption>
</figure> 

<div class="container">
  
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h3>Sign up:</h3>
  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Please enter your email" %>
  </div>
  <br>
  <div class="field form-group">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Please enter your new password (must be at least 6 characters)" %>
  </div>
  <br>
  <div class="field form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Please confirm your new password" %>
  </div>
  <br>
  <div class="d-grid gap-1 d-md-flex justify-content-left actions">
    <%= f.submit "Sign up", class:"btn btn-sm btn-secondary" %>
  </div>
<% end %>
  <br>
<%= render "devise/shared/links" %>

